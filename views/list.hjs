<body style="width: 100%; height: 100%">

<div style="float: right; position: fixed; right: 0">
    <a href="#" onclick="$('#map').css('display', $('#map').css('display') == 'block' ? 'none' : 'block');">
        Show/Hide Map
    </a>

    <div id="map" style="display: block; position: absolute; width:900px; height:700px; right: 0"></div>
</div>

<div style="width: 100%; height: 100%; overflow: auto">
    <table border="1" cellpadding="10" cellspacing="0">
    {{#apartments}}
    <tr>
        <td><a href="{{url}}">{{id}}</a></td>
        <td><a href="#" onclick="positionOn('{{id}}')">on map</a></td>
        <td>{{district}}</td>
        <td>{{address}}</td>
        <td>{{rooms}}</td>
        <td>{{area}}</td>
        <td>{{price}}</td>
        <td>{{createdAtStr}}</td>
        <td style="padding: 0">
            <table>
                {{#duplicates}}
                <tr>
                    <td><a href="{{url}}">{{id}}</a></td>
                    <td>{{price}}</td>
                    <td>{{source}}</td>
                    <td>{{createdAtStr}}</td>
                </tr>
                {{/duplicates}}
            </table>
        </td>
    </tr>
    {{/apartments}}
</table>
</div>
